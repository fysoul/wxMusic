page{overflow: hidden;}

/* 操作歌曲部分 */

/* 管理 */
.manage{height: 100rpx;width: 100vw;}
.manage view{width:100rpx;margin-right: 20rpx;line-height: 100rpx;text-align:center;}
.down{width: 100vw;height: 300rpx;}
.line{margin:50rpx 0;}
.line::after{content: "";height:0;display:block;clear: both;}
.line_l{width: 50%;height: 1rpx;background: linear-gradient(450deg,#1ECD99,white);float: left;}
.line_r{width: 50%;height: 1rpx;background: linear-gradient(-450deg,#1ECD99,white);float: left;}


.box_gq{width: 100vw;height:calc(100vh - 510rpx);overflow-y: auto;}
.gq{width: 100vw;height: 100rpx;border-bottom:1rpx solid rgba(0,0,0,.1);
  padding: 10rpx 0rpx;font-size: 28rpx;transition:height 200ms linear,margin-bottom 200ms linear;}
.gq .gq_xx{height: 100%;width: 15%;text-align: center;display: inline-block;vertical-align: middle;line-height: 100rpx;}
.gq .maxWidth{width:70%;}
.gq .maxWidth view{height: 50rpx;line-height: 50rpx;text-align: left;overflow: hidden;}
.gq .fee{width: 60rpx;height:30rpx;
       display: inline-block;text-align: center;vertical-align: middle;
       border-radius:10rpx;line-height: 30rpx;margin-left: 10rpx;color: white;
}
.author image{vertical-align: middle;}
.gqActive{background:rgba(30,205,153,0.9);color: white;}
.gqAnimate{box-shadow:inset 0rpx -2rpx 5rpx rgba(0,0,0,.3);height:99rpx;margin-bottom:1rpx;}
/* 操作区域马赛克区域 */
.mask{
  width: 100vw;height: 100vh;background: rgba(0, 0, 0, .5);
  position: fixed;top: 0;left: 0;z-index: 99;
  /* opacity: 1; */
}
.close_mask{width: 100vw;height: calc(100vh - 400rpx);}
.caozuo_box{width: 100vw;height: 400rpx;background: rgb(210, 210, 210);position: absolute;left: 0;bottom: 0;}
.caozuo_msg,.music_msg{width: 100vw;height: 100rpx;margin-bottom: 30rpx;}
.music_msg{line-height: 100rpx;text-indent: 20rpx;margin-bottom:0rpx;overflow: hidden;}
.caozuo_msg{height:120rpx;display: flex;justify-content: space-evenly;}
.caozuo_msg>view{width:80rpx;height:120rpx;}
.caozuo_msg>view>span{width:80rpx;height:80rpx;display: block; border-radius: 20rpx;border: 1rpx solid white;text-align: center;line-height: 80rpx;background: white;}
.caozuo_msg>view>view{width: 80rpx;height: 40rpx;text-align: center;line-height: 50rpx;}




/* 添加到歌单 */
.selectNumber{
  width: 100vw;height: 100rpx;
  line-height: 100rpx;
}
.selectNumber view:first-child{
  width:400rpx;height: 100rpx;text-align: center;
    margin-left:calc(50vw - 200rpx);
}
.selectNumber view:last-child{margin-right: 50rpx;}
.addList{
  width: 100vw;height: 100vh;
  position: absolute;top:0rpx;left: 0rpx;transform: translateY(100vh);
  z-index: 99;background:white;
}
.all_box{width: 100vw;height: calc(100vh - 100rpx); overflow-y: auto;}
.addList .box_list{
    width:calc(100vw - 20rpx);height:200rpx;
    position: relative;
    margin-top:30rpx;
    padding-left:20rpx;
}
.addList .box_list image{
  width: 200rpx;height: 200rpx;
  border-radius: 15rpx;
  
}
.addList .box_list .shadow{
  width:20rpx;height: 160rpx;
  position: absolute;top: 20rpx;left: 220rpx;
  border-top-right-radius:15rpx;
  border-bottom-right-radius:15rpx;
  background: rgba(210,210,210,1);
}
.addList .box_list .list_text{
  margin-left: 30rpx;
  width: calc(100% - 300rpx);
  height: 200rpx;
  line-height:80rpx;
}
.addList .box_list .list_text view{
  width:100%;height:80rpx;line-height: 80rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.addList .new_list image{
  background: #1ECD99;
  color: white;font-size: 100rpx;
  line-height: 200rpx;text-align: center;
}
.addList .new_list view{
  width: 200rpx;height: 100rpx;text-align: center;
  line-height: 100rpx;margin-top: 50rpx;
}
/* 新建歌单 */
.mask_addList{
  width: 100vw;height: 100vh;
  position: fixed;top: 0;left: 0;
  z-index: 99;
  background-color: rgba(0,0,0,.5);
}
.mask_addList .box_msgList{
  background:white;height:240rpx;width:400rpx;
  margin: calc(50vh - 120rpx) calc(50vw - 200rpx);
}
.mask_addList .box_msgList .list_text{
  width: 400rpx;height: 80rpx;
  line-height: 80rpx;text-align: center;
  font-size: 40rpx;font-weight: 700rpx;
}
.mask_addList .box_msgList input{
  outline: none;width: 340rpx;height: 60rpx;
  padding-left:20rpx;border-radius:10rpx;
  background:#e6e6e6;
  margin:0rpx auto 20rpx auto;
}
.mask_addList .box_msgList input:focus{box-shadow: 0 0 5rpx 5rpx #e6e6e6;}
.mask_addList .box_msgList .add_botton{
  width: 199rpx;height: 79rpx;
  border-top:1rpx solid #e6e6e6;
  border-right:1rpx solid #e6e6e6;
  text-align: center;line-height: 80rpx;
  padding-bottom: 1rpx;
}
.mask_addList .box_msgList .rest_botton{
  width:200rpx;
  border-right:none;
}