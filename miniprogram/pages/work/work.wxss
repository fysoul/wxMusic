/* 未完成和已完成 */
.wc_box{width: 100%;height: 150rpx;margin-top: 50rpx; display: flex;justify-content: center;}
.wcflag{
  width: 160rpx;height: 160rpx;
  border-radius: 50%;
  background:white;
  box-shadow:  inset -8rpx -6rpx 10rpx 5rpx rgba(0, 0, 0, .2);
  /* text-shadow:15rpx 15rpx 10rpx rgba(0, 0, 0,.9); */
  text-align: center;
  overflow: hidden;
  margin:0rpx 50rpx;
  font-weight: 560;
  transform:perspective(800px) translateZ(-100px);
  transition: all 500ms; 
}
.wcflag view{width: 100%;margin-top: 25rpx; height:35rpx;line-height: 35rpx;}
.wcActive{color: white;background: #1AAD19;
  box-shadow:  inset -8rpx -6rpx 10rpx 5rpx rgba(0, 0, 0, .6);
  transform:perspective(800px) translateZ(0px);}


